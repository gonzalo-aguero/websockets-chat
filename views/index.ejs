<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group chat</title>
    <link rel="stylesheet" href="assets/styles/index.css">
    <script src="app.js"></script>
</head>
<body>
    <h1 id="mainTitle">Group chat</h1>
    <nav id="chatNavigation">
        <input type="text" name="userName" id="userName" placeholder="Enter your name">
        <button id="connectBtn">Connect</button>
        <button id="disconnectBtn" disabled="disabled" style="opacity: .5; cursor: default;">Disconnect</button>
        <span class="disconnected connectionStatus" id="connectionStatus"></span>
    </nav>
    <div id="connectedUsers">
        <h2>Connected users</h2>
        <div id="connectedUsersList"></div>
    </div>
    <div id="content">
        <div id="chat"></div>
        <form id="chatForm">
            <textarea id="message" placeholder="Message"></textarea>
            <input type="submit" value="Send">
        </form>
    </div>
</body>
</html>